{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@constants": ["constants"],
      "@controllers/*": ["controllers/*"],
      "@models/*": ["models/*"],
      "@inputs/*": ["inputs/*"],
      "@payloads/*": ["payloads/*"],
      "@routes/*": ["routes/*"],
      "@middlewares/*": ["middlewares/*"],
      "@configs/*": ["configs/*"],
      "@resolvers/*": ["resolvers/*"],
      "@guards/*": ["guards/*"],
      "@utils/*": ["utils/*"],
      "@services/*": ["services/*"]
    },
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"]
}
